<TableRow
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/result_crop_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#b3b3b3" android:layout_margin="1dip">
    <TextView
            android:id="@+id/fertilizer_name"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:layout_marginLeft="5dip"
            android:background="#e6e6e6" android:layout_margin="1dip"/>
    <TextView
            android:id="@+id/fertilizer_price_per_50_kgs"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:layout_marginLeft="5dip"
            android:background="#e6e6e6" android:layout_margin="1dip"/>
</TableRow>